generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  email        String        @unique
  name         String?
  password     String?
  image        String?
  bio          String?
  gender       String?
  phone        String?
  isAdmin      Boolean       @default(false)
  isBlocked    Boolean       @default(false)
  favoriteIds  String[]      @db.ObjectId
  createdAt    DateTime      @default(now())
  listings     Listing[]
  reservations Reservation[]
  favorites    Favorite[]
}

model Listing {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String
  price        Float
  basePrice    Float?
  weekendMultiplier Float @default(1.25)
  seasonalMultiplier Float @default(1.0)
  demandMultiplier Float @default(1.0)
  location     String
  rating       Float
  type         String
  lat          Float?
  lng          Float?
  images       String[]
  amenities    String[]
  maxGuests    Int           @default(2)
  
  // Work-from-Travel Score Fields
  wifiStrength      Float   @default(5)
  noiseLevel        Float   @default(5)
  workspaceRating   Float   @default(5)
  
  // Pet-Friendly Fields
  petAllowed        Boolean @default(false)
  petSize           String? // "small", "medium", "large", "any"
  petAmenities      String[] @default([])
  nearbyParks       Boolean @default(false)
  
  // Comfort Metrics
  spaceSize         Float?  // in sq ft
  luxuryAmenities   String[] @default([])
  
  // Travel Mode Scores
  romanticScore     Float   @default(0)
  familyScore       Float   @default(0)
  adventureScore    Float   @default(0)
  
  hostId       String        @db.ObjectId
  host         User          @relation(fields: [hostId], references: [id])
  reservations Reservation[]
  favorites    Favorite[]
}

model Reservation {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  startDate        DateTime
  endDate          DateTime
  totalPrice       Float
  guests           Int      @default(1)
  paymentStatus    String   @default("PENDING") // PENDING, PAID, FAILED, REFUNDED
  stripeSessionId  String?
  listingId        String   @db.ObjectId
  listing          Listing  @relation(fields: [listingId], references: [id])
  userId           String   @db.ObjectId
  user             User     @relation(fields: [userId], references: [id])
  createdAt        DateTime @default(now())
}

model Favorite {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  listingId String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, listingId])
}
